{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{% set notification_bar = drupal_entity('node', 31, 'notification_bar') %}
{% if notification_bar['#node'].field_notification.value is not empty %}
  {% set attributes = attributes.addClass('has-notification') %}
{% endif %}

{% if content %}
  <div{{ attributes }}>
    {{ notification_bar }}

    <div class="container">
      {{ content }}
      <a href="#" rel="nofollow" class="mm-toggle mm-toggle--wrapper js-mm-toggle"></a>
    </div>
  </div>
{% endif %}
